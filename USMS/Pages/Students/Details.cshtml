@page
@model USMS.Pages.Students.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Student</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Student.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Student.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Student.EnrollmentDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.EnrollmentDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Student.Enrollments)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Lesson Title</th>
                    <th>Midterm</th>
                    <th>Final</th>
                    <th>grade</th>
                </tr>
                @foreach (var item in Model.Student.Enrollments)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Lesson.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.midterm)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.final)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.grade)
                            (
                            @if (item.grade == "FF")
                            {
                                <b style="color:red">Kaldı</b>
                            }
                            @if (item.grade != "FF" && item.grade != null)
                            {
                                <b style="color:forestgreen">Geçti</b>
                            }
                            else
                            {
                                <b>Girilmedi</b>
                            }
                            )
                        </td>
                    </tr>


                        }
                </table>
        </dd>
    </dl>
</div>
<div>
    <a style="color: black" asp-page="./Edit" asp-route-id="@Model.Student.ID">Edit</a> |
    <a style="color: black" asp-page="./Index">Back to List</a>
</div>
