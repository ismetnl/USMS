@model USMS.Pages.Lessons.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Lesson</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Lesson.LessonID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Lesson.LessonID)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Lesson.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Lesson.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Lesson.Credit)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Lesson.Credit)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Lesson.LessonAssigments)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
             
                </tr>
                @foreach (var item in Model.Lesson.LessonAssigments)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Instructor.FirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Instructor.LastName)
                        </td>
                    </tr>


                }
            </table>
        </dd>
    </dl>
</div>
