@model USMS.Pages.Instructors.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Instructor</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Instructor.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Instructor.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Instructor.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Instructor.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Instructor.Department)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Instructor.Department.Location)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Instructor.LessonAssigments)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Lesson Title</th>
                    
                </tr>
                @foreach (var item in Model.Instructor.LessonAssigments)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Lesson.Title)
                        </td>
                    </tr>


                }
            </table>
        </dd>
    </dl>
</div>
