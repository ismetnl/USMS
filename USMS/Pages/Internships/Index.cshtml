@page
@model USMS.Pages.Internships.IndexModel

@{
    ViewData["Title"] = "Index";
}



<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container">
            <a class="navbar-brand" data-toggle="tooltip" title="University Student Management System" asp-area="" asp-page="/Home/Index">
                USMS
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">

                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/Departments/Index">Departments</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/Instructors/Index">Instructors</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/Lessons/Index">Lessons</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/LessonAssigments/Index">LessonAssigments</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/Students/Index">Students</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/Enrollments/Index">Enrollments</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/Internships/Index">Internships</a>
                    </li>

                </ul>
            </div>
            <div class="collapse navbar-collapse flex-grow-0">
                <ul class="navbar-nav text-right">
                    <li class="nav-item active">
                        <a asp-area="" asp-page="/Index">
                            <img class="hidden-xs" src="~/images/logout.png">
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>
<h1>Internships</h1>
<head>
    <style>
        table {
            font-family: arial, sans-serif;
            border-collapse: collapse;
            width: 100%;
            color: white
        }

        td, th {
            text-align: left;
            padding: 8px;
        }

        tr:nth-child(even) {
            background-color: #ffffff;
        }

        a {
            color: black
        }

        h1 {
            color: white
        }
    </style>

</head>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Internship[0].PL)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Internship[0].subject)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Internship[0].StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Internship[0].Student)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Internship)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.PL)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.subject)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Student.FullName)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.StudentID">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.StudentID">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.StudentID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
